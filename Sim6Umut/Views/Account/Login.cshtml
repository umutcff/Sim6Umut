
﻿
@model LoginVM

<br />

<div class="container">
    <div class="row">

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="mt-2 text-danger"></div>




            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" id="EmailInput" placeholder="Enter Email">
                <span asp-validation-for="Email" class="mt-2 text-danger"></span>
            </div>



            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" placeholder="Enter Password">
                <span asp-validation-for="Password" class="mt-2 text-danger"></span>
            </div>



            <button type="submit" class=" mt-3 btn btn-primary">Login</button>
        </form>



    </div>
</div>